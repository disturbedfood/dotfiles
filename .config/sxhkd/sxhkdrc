alt + shift + q
	bspc window -c

alt + t
	bspc desktop -l next

alt + b
	bspc desktop -B

alt + {s,f}
	bspc window -t {floating,fullscreen}

alt + {_,ctrl + }{h,j,k,l}
	bspc window -{f,p} {left,down,up,right}

alt + {_,shift + }c
	bspc window -f {next,prev}

alt + {comma,period}
	bspc desktop -C {backward,forward}


alt + ctrl + {comma,period}
	bspc desktop -R {270,90}

alt + bracket{left,right}
	bspc desktop -f {prev,next}

alt + ctrl + {_,shift +}space
	bspc {window -p cancel,desktop -c}

alt + Return 
	dmenu_run

alt + ctrl + {1-9}
	bspc {window -p cancel,desktop -c}

alt + {_,shift + }{1-9,0}
	bspc window -r 0.{1-9}

~button1
	bspc pointer -g focus

alt + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

alt + !button{1-3}
	bspc pointer -t %i %i

alt + @button{1-3}
	bspc pointer -u
